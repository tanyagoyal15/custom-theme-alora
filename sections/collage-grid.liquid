<div class="collage-grid collage-{{ section.settings.layout_style }} m-auto h-auto mt-32">
  <div class="collage-items">
    {% if section.settings.layout_style == 'text_with_grid' and section.settings.show_text_block %}
      <div class="collage-text">
        <h2 class="cl-white m-0 text-3xl">{{ section.settings.heading | default: 'Discover your next bestseller' }}</h2>
        <p class="cl-white mt-8">
          {{ section.settings.subtext | default: 'See what retailers from across the globe are loving on Alora' }}
        </p>
        <a href="{{ section.settings.button_link | default: '/' }}" class="collage-button">
          {{ section.settings.button_text | default: 'Shop all bestsellers' }}
        </a>
      </div>
    {% endif %}
    {% for block in section.blocks %}
      <div class="collage-item collage-item-{{ forloop.index }}" id="block-{{ block.id }}">
        <div class="skeleton-loader">&nbsp;</div>
        <!-- Skeleton Loader -->
        <a href="{{ block.settings.link | default: '/' }}">
          {% if block.settings.image != blank %}
            <img
              src="{{ block.settings.image | image_url }}"
              alt="{{ block.settings.alt_text }}"
              width="100%"
              height="100%"
              class="collage-image hidden"
              style="grid-area: img{{ forloop.index0 }};"
              loading="eager"
            >
          {%- else -%}
            <img
              width="100%"
              height="100%"
              loading="lazy"
              src="{{ 'collage-placeholder.jpg' | asset_url }}"
              loading="eager"
            >
          {%- endif %}
        </a>
        {% if block.settings.overlay_text != blank %}
          <div class="collage-overlay pointer">{{ block.settings.overlay_text }}</div>
        {% endif %}
        {% if block.settings.link != blank %}
          <a class="collage-link" href="{{ block.settings.link }}">{{ block.settings.link_label }}</a>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .collage-grid {
    width: 80%;
  }

  .collage-items {
    display: grid;
    gap: 16px;
  }

  .collage-item {
    position: relative;
    overflow: hidden;
    width: 100%;
  }

  .collage-item img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease-in-out;
  }

  .collage-overlay {
    position: absolute;
    bottom: 0px;
    left: 16px;
    padding: 15px;
    font-size: 18px;
    text-transform: uppercase;
    width: max-content;
    text-decoration: none;
    text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.3);
    color: #fff;
  }

  .collage-symmetrical .collage-items {
    grid-template-columns: repeat(3, 1fr);
  }

  .collage-asymmetrical .collage-items {
    grid-template-columns: 2fr 1fr;
    grid-template-rows: auto;
  }

  .collage-text_with_grid .collage-items {
    justify-content: center;
    grid-template-columns: repeat(4, 260px);
    grid-template-rows: auto;
    grid-template-areas:
      'cta cta img0 img1'
      'img2 img3 img4 img5';
  }

  .collage-item {
    aspect-ratio: 1 / 1.3;
    position: relative;
    overflow: hidden;
    width: 100%;
  }

  .collage-grid.collage-text_with_grid .collage-item {
    {% comment %} aspect-ratio: 1 / 1; {% endcomment %}
    position: relative;
    overflow: hidden;
  }

  .collage-grid.collage-text_with_grid .collage-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .collage-grid.collage-asymmetrical .collage-item:nth-child(1) {
    grid-column: 1 / 2;
    grid-row: 1 / 3;
  }

  .collage-grid.collage-asymmetrical .collage-item:nth-child(2) {
    grid-column: 2 / 3;
    grid-row: 1 / 2;
  }

  .collage-grid.collage-asymmetrical .collage-item:nth-child(3) {
    grid-column: 2 / 3;
    grid-row: 2 / 3;
  }

  /* Text + 6-Image Grid Layout */
  .collage-text_with_grid {
    background: #664444;
    padding: 80px 44px;
    width: 100% !important;
  }
  .collage-text {
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: left;
    align-self: center;
    grid-area: cta;
    max-width: 450px;
  }
  .collage-button {
    display: inline-block;
    padding: 10px 20px;
    color: #dcd6d6;
    border: 1px solid #dcd6d6;
    text-decoration: none;
    border-radius: 5px;
    max-width: 200px;
  }

  @media (max-width: 768px) {
    .collage-items {
      grid-template-columns: 1fr;
    }
    .collage-text_with_grid {
      grid-template-columns: 1fr;
      text-align: center;
    }
  }

  /* Skeleton Loader */
  .skeleton-loader {
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, #e0e0e0 25%, #f5f5f5 50%, #e0e0e0 75%);
    background-size: 400% 100%;
    animation: skeleton-loading 1.5s infinite ease-in-out;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
  }

  /* Skeleton Animation */
  @keyframes skeleton-loading {
    0% {
      background-position: 100% 0;
    }
    100% {
      background-position: -100% 0;
    }
  }

  /* Image Fade-in Transition */
  .collage-image {
    opacity: 0;
    transition: opacity 0.5s ease-in-out;
    position: relative;
    z-index: 2;
  }

  .collage-image.fade-in {
    opacity: 1;
  }

  @media screen and (max-width: 749px) {
    .collage-grid {
      width: 100%;
      height: 100%;
      padding: 18px;
    }

    .collage-symmetrical .collage-items {
      display: flex;
      flex-direction: column;
    }

    .collage-text_with_grid .collage-items {
      display: grid;
      grid-template-columns: repeat(2, minmax(0, 1fr));
      grid-template-rows: repeat(2, minmax(0, 1fr));
      grid-template-areas:
        'cta cta'
        'img0 img1'
        'img2 img3';
      gap: 16px;
      padding: 8px;
    }

    .collage-text_with_grid .collage-items .collage-text {
      order: -1;
      margin-bottom: 1rem;
    }

    /* limit to 4 images on mobile */
    .collage-text_with_grid .collage-item:nth-of-type(n + 6) {
      display: none;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const collageImages = document.querySelectorAll('.collage-image');

    collageImages.forEach((image) => {
      const skeleton = image.closest('.collage-item').querySelector('.skeleton-loader');

      function handleImageLoad() {
        image.classList.remove('hidden');
        image.classList.add('fade-in');
        if (skeleton) {
          skeleton.style.display = 'none';
        }
      }

      if (image.complete && image.naturalWidth > 0) {
        handleImageLoad();
      } else {
        image.addEventListener('load', handleImageLoad);
        image.addEventListener('error', () => console.warn('Collage image failed to load:', image.src));
      }
    });
  });
</script>

{% schema %}
{
  "name": "Collage Grid",
  "class": "section",
  "settings": [
    {
      "type": "select",
      "id": "layout_style",
      "label": "Layout Style",
      "options": [
        { "value": "symmetrical", "label": "Three Column" },
        { "value": "asymmetrical", "label": "Asymmetrical" },
        { "value": "text_with_grid", "label": "Text + 6-Image Grid" }
      ],
      "default": "asymmetrical"
    },
    {
      "type": "checkbox",
      "id": "show_text_block",
      "label": "Show Text Block (Only for Text + Grid Layout)",
      "default": false
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Discover your next bestseller"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtext",
      "default": "See what retailers from across the globe are loving on Alora"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop all bestsellers"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Image" },
        { "type": "text", "id": "alt_text", "label": "Alt Text" },
        { "type": "text", "id": "overlay_text", "label": "Overlay Text (Optional)" },
        { "type": "url", "id": "link", "label": "Link" },
        { "type": "text", "id": "link_label", "label": "Link Label" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collage Grid",
      "settings": {
        "layout_style": "symmetrical",
        "show_text_block": false
      },
      "blocks": [{ "type": "image" }, { "type": "image" }, { "type": "image" }]
    }
  ]
}
{% endschema %}
